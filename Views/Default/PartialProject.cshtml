@model List<AcunMedyaPortfolio.Models.TblProject>
<section class="ftco-section ftco-project" id="project-section">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">Projelerim</span>
                <h2 class="mb-4">Oluşturduğum Projeler</h2>
                <p></p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="project img shadow ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@item.ProjectImageUrl);">
                        <div class="overlay"></div>
                        <div class="text text-center p-4">
                            <h3><a href="https://github.com/CagriOsmanEdiz/@item.ProjectName">@item.ProjectName</a></h3>
                            <span>@(item.TblCategory != null ? item.TblCategory.CategoryName : "Web Sitesi")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
