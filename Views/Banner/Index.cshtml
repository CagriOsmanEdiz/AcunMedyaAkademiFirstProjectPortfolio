@model  List<AcunMedyaPortfolio.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Banner Adı</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BannerID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Banner/UpdateBanner/@item.BannerID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Banner/DeleteBanner/@item.BannerID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Banner/CreateBanner" class="btn btn-success">Yeni Banner Ekle</a>
